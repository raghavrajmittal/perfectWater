<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thushara.perfectwater.Controller.ReportsActivity"
    tools:showIn="@layout/activity_reports">

    <Button
        android:text="Add Water Source Reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addReports_button"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addPurityReport_button"
        android:layout_alignStart="@+id/addPurityReport_button"
        android:layout_marginTop="48dp" />

    <Button
        android:text="View Your Source Reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewReports_button"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/addPurityReport_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Water Purity Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id= "@+id/addPurityReport_button"
        android:layout_below="@+id/addReports_button"
        android:layout_alignRight="@+id/viewReports_button"
        android:layout_alignEnd="@+id/viewReports_button" />

    <Button
        android:text="View Purity Reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id= "@+id/viewPurityReport_button"
        android:layout_below="@+id/viewReports_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Historical Reports Graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id= "@+id/graph_button"
        android:layout_below="@+id/viewPurityReport_button"
        android:layout_alignLeft="@+id/addPurityReport_button"
        android:layout_alignStart="@+id/addPurityReport_button" />

    <Button
        android:id="@+id/report_screen_home_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Home" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Add New Reports"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPurityReport_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="View Your Reports"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

</RelativeLayout>
