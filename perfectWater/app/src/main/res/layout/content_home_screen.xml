<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thushara.perfectwater.Controller.HomeScreen"
    tools:showIn="@layout/activity_home_screen">

    <Button
        android:text="@string/home_screen_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_screen_logout_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/home_screen_edit_profile_button"
        android:layout_alignEnd="@+id/home_screen_edit_profile_button" />

    <Button
        android:text="@string/home_screen_edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_screen_logout_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/home_screen_edit_profile_button" />

    <Button
        android:text="Water Availablility Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_screen_view_water_availability_map_button"
        android:layout_above="@+id/home_screen_edit_profile_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/home_screen_edit_profile_button"
        android:layout_alignEnd="@+id/home_screen_edit_profile_button" />

    <Button
        android:text="Reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/report_button"
        android:layout_above="@+id/home_screen_view_water_availability_map_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/home_screen_view_water_availability_map_button"
        android:layout_alignEnd="@+id/home_screen_view_water_availability_map_button" />

</RelativeLayout>
